<?xml version="1.0"?>
<project>

    <pomVersion>3</pomVersion>

    <name>TestDox</name>
    <id>testdox</id>
    <currentVersion>0.1-SNAPSHOT</currentVersion>

    <organization>
        <name>Chris Stevenson</name>
        <url>http://agiledox.sourceforge.net/index.html</url>
    </organization>
    <inceptionYear>2003</inceptionYear>
    <package>com.thoughtworks.testdox</package>

    <shortDescription>
    	Creates simple documentation from test classes
    </shortDescription>

    <description>
		TestDox creates simple documentation from the method names in JUnit test cases.
    </description>

    <url>http://agiledox.sourceforge.net</url>
    <issueTrackingUrl/>
    <siteAddress>shell.sourceforge.net</siteAddress>
    <siteDirectory>/home/groups/a/ag/agiledox/htdocs</siteDirectory>
    <distributionDirectory>/home/groups/a/ag/agiledox/htdocs/dist</distributionDirectory>

    <repository>
        <connection>
    		scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot/agiledox:testdox
        </connection>
        <url>http://cvs.sourceforge.net/cgi-bin/viewcvs.cgi/agiledox</url>
    </repository>

    <mailingLists>
        <mailingList>
            <name>agiledox-users</name>
            <subscribe>http://lists.sourceforge.net/lists/listinfo/agiledox-user</subscribe>
            <unsubscribe>http://lists.sourceforge.net/lists/listinfo/agiledox-user</unsubscribe>
            <archive>http://sourceforge.net/mailarchive/forum.php?forum=agiledox-user</archive>
        </mailingList>
    </mailingLists>

    <developers>
        <developer>
            <name>Chris stevenson</name>
            <id>skizz</id>
            <email>chris@skizz.biz</email>
            <organization>skizz</organization>
        </developer>

    </developers>

    <dependencies>

        <dependency>
            <id>qdox</id>
            <version>1.2</version>
            <properties>
                <jnlp.jar>true</jnlp.jar>
            </properties>
        </dependency>

        <dependency>
            <id>ant</id>
            <version>1.5.3-1</version>
            <url>http://ant.apache.org/</url>
        </dependency>

    </dependencies>

    <reports>
        <report>maven-changelog-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-testdox-report-plugin</report>
    </reports>


    <build>

        <nagEmailAddress>
            chris@skizz.plus.com
        </nagEmailAddress>

        <sourceDirectory>src/java</sourceDirectory>

        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

        <integrationUnitTestSourceDirectory/>

        <aspectSourceDirectory/>

        <!-- Unit test cases -->
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
            </resources>

        </unitTest>

        <!-- J A R  R E S O U R C E S -->
        <!-- Resources that are packaged up inside the JAR file -->
        <resources>
            <resource>
                <directory>${basedir}/src/plugin-resources</directory>
                <targetPath>plugin-resources</targetPath>
            </resource>
            <resource>
                <directory>${basedir}</directory>
                <includes>
                    <include>plugin.jelly</include>
                    <!--                    <include>plugin.properties</include>-->
                    <!--                    <include>project.properties</include>-->
                    <include>project.xml</include>
                </includes>
            </resource>
        </resources>

        <!-- Integration unit test cases -->
        <integrationUnitTest/>

        <jars>

        </jars>

    </build>

</project>
